//-Layout Base
extends ../src/templates/base.pug

//-Etiqueta Title
block title
	-var titulo = "Image";
	title Astrolabio

//-Etiqueta Metadescription
block description
	meta(name="description", content="El Astrolabio de BRM" )


block content
	//Header
	include ../src/templates/partials/header.pug
	///-Header

	section.image
		figure.image-selected
			img(src="images/dog-1.jpg", alt="")

		article
			h2 Categorías
			p.lista-categorias
				-for(b = 0; b < 30;b++)
					a(href="#") Categoría #{b}
			
			h2 Tags
			p.lista-tags
				-for(c = 0; c < 40;c++)
					a(href="#") Categoría #{c}

			button.btn.btn-descargar(type="button").
				<span>Descargar</span> <img src="images/download.svg" />


	aside.related
		h3 Relacionadas
		-for(x =0;x < 10; x++)
			figure.related-item
				a(href="#")
					img(src="images/dog-1.jpg")
